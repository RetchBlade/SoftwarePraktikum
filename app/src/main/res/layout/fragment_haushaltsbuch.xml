<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.haushaltsbuch.HaushaltsbuchFragment">

    <!-- Ay bilgisi -->
    <TextView
        android:id="@+id/text_monat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juli"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pie chart -->
    <com.serenitysystems.livable.ui.haushaltsbuch.CustomPieChartView
        android:id="@+id/pie_chart_view"
        android:layout_width="414dp"
        android:layout_height="297dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_monat" />

    <!-- Sağda mavi daire içinde artı işareti -->
    <RelativeLayout
        android:id="@+id/blau_kreis"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/blau_kreis"
        app:layout_constraintTop_toBottomOf="@id/pie_chart_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Solda kırmızı daire içinde eksi işareti -->
    <RelativeLayout
        android:id="@+id/rot_kreis"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rot_kreis"
        app:layout_constraintTop_toBottomOf="@id/pie_chart_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
