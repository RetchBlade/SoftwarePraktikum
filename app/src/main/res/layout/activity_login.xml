<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hintergrundbild -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundlnavyblue"/>

    <!-- LinearLayout f체r Logo und Willkommensnachricht -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="294dp"
            android:layout_height="283dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Willkommen!"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- CardView f체r Eingabefelder und Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_margin="16dp"
            android:background="@drawable/gradient_beige"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_beige">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Zus채tzlicher Platz -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <!-- Email Adresse Eingabefeld -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="7dp"
                        app:cardCornerRadius="8dp">

                        <EditText
                            android:id="@+id/usernameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Email Adresse"
                            android:padding="20dp"
                            android:textSize="17sp"
                            android:textColor="@color/own_very_dark_gray" />

                    </androidx.cardview.widget.CardView>

                    <!-- Passwort Eingabefeld -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:padding="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="7dp"
                        app:cardCornerRadius="8dp">

                        <EditText
                            android:id="@+id/editTextNumberPassword"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Passwort"
                            android:inputType="textWebPassword"
                            android:padding="20dp"
                            android:textSize="17sp"
                            android:textColor="@color/own_very_dark_gray" />

                    </androidx.cardview.widget.CardView>

                    <!-- Login Button -->
                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="159dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="7dp"
                        android:backgroundTint="@color/own_navy_Blau"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:text="Login"
                        android:textColor="@color/own_helle_Beige"
                        android:textSize="19sp" />

                    <!-- Registrieren TextView -->
                    <TextView
                        android:id="@+id/Registrieren"
                        android:layout_width="198dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingLeft="10dp"
                        android:text="Noch keinen Account?"
                        android:textColor="#1b7c97"
                        android:textSize="16sp" />

                    <!-- Passwort vergessen TextView -->
                    <TextView
                        android:id="@+id/DatenVergessen2"
                        android:layout_width="229dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Benutzerdaten vergessen?"
                        android:textColor="#1b7c97"
                        android:textSize="16sp" />

                    <!-- Benutzerdaten merken CheckBox -->
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="261dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginEnd="85dp"
                        android:buttonTint="@color/own_navy_Blau"
                        android:text="Benutzerdaten merken"
                        android:textColor="#1b7c97"
                        android:textSize="16sp" />

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- NavHostFragment hinzuf체gen -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
