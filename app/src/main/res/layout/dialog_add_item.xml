<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <!-- Hauptlayout des Dialogs -->
    <LinearLayout
        android:id="@+id/addItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/metallischer_hintergrund"
        android:padding="16dp">

        <!-- Produktbild -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_camera_placeholder"
        android:contentDescription="Produktbild"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="8dp" />

        <!-- Hinweistext unter dem Produktbild -->
        <TextView
            android:id="@+id/productImageHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produktbild hinzufügen"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Produktname Eingabe -->
        <EditText
            android:id="@+id/editItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produktname"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_background" />

        <!-- Menge Eingabe -->
        <EditText
            android:id="@+id/editItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Menge"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_background" />

        <!-- Einheit Spinner -->
        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            android:padding="8dp" />

        <!-- Kategorie Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            android:padding="8dp" />

        <!-- Datum auswählen -->
        <EditText
            android:id="@+id/etSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Datum auswählen"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_background"
            android:focusable="false"
            android:cursorVisible="false" />

        <!-- Buttons zum Hinzufügen oder Abbrechen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abbrechen"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hinzufügen"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
