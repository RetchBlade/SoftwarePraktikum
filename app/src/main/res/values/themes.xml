<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Livable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/own_very_dark_gray</item>
        <item name="colorPrimaryVariant">@color/own_very_dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/own_grayish_yellow</item>
        <item name="colorSecondaryVariant">@color/own_navy_Blau</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/CustomButtonStyle</item> <!-- Button Style anpassen -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item> <!-- Setze fÃ¼r Buttons -->
    </style>

    <style name="Theme.Livable.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Livable.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Livable.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
