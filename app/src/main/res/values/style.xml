<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="colorPrimary">@color/own_navy_Blau</item>
        <item name="colorPrimaryVariant">@color/own_navy_Dunkelblau</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/hell_blau</item>
    </style>

    <!-- Custom text  -->
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/own_text_Farbe</item>
    </style>

    <!-- Unified Dialog theme -->
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- Verwende den einheitlichen Hintergrund -->
        <item name="android:textColor">@color/own_text_Farbe</item> <!-- Einheitliche Textfarbe -->
    </style>


    <!-- Dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CustomFullScreenDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Transparent window background -->
        <item name="android:backgroundDimEnabled">true</item> <!-- Enable dimming behind the dialog -->
    </style>


</resources>
