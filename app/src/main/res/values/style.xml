<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>

        <!-- Optionally, add these to define Material colors -->
        <item name="colorPrimary">@color/hell_blau</item>
        <item name="colorPrimaryVariant">@color/own_navy_Blau</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/own_navy_Dunkelblau</item>
    </style>

    <!-- Custom text appearance -->
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">16sp</item> <!-- Set default text size -->
        <item name="android:textColor">#000000</item> <!-- Set default text color -->
    </style>

    <!-- Dialog theme -->
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- Apply custom background -->
        <item name="android:backgroundDimEnabled">true</item> <!-- Dim the background when showing the dialog -->
        <item name="android:windowNoTitle">true</item> <!-- Hide the title -->
        <item name="android:windowElevation">16dp</item> <!-- Add shadow effect by raising the elevation -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:textColorPrimary">@color/own_text_Farbe</item> <!-- Change text color to own_navy_blue -->
    </style>

    <!-- Dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
