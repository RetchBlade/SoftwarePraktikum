<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <!-- Ein transparenter, dunkler Schatten -->
            <solid android:color="#33000000" />
            <corners android:radius="16dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Main Background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#767575"
                android:endColor="#9E9B9B"
                android:angle="45"/>
            <corners android:radius="16dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>
