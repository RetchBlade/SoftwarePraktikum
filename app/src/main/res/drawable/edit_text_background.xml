<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#175E5E5E" /> <!-- Soft dark shadow color -->
            <corners android:radius="16dp"/>
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Padding for shadow effect -->
        </shape>
    </item>

    <!-- Main Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/> <!-- Padding for text -->
        </shape>
    </item>

</layer-list>
