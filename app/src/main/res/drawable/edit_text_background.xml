<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient for the EditText -->
    <gradient
        android:startColor="#FFFFFF"
    android:endColor="#F2F2F2"
    android:angle="90"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Stroke for the border -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Light grey border -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
