<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state (enabled) -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0B6680"
                android:endColor="#65B8B8"
                android:angle="90"/> <!-- Vertical gradient -->
            <corners android:radius="20dp" /> <!-- Rounded Corners -->
            <stroke android:width="1dp" android:color="@color/own_navy_Blau" /> <!-- Border Color -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#98CAED"
                android:endColor="@color/own_navy_Blau"
                android:angle="90"/> <!-- Vertical gradient -->
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#00BCD4" /> <!-- Pressed border color -->
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#BDBDBD"
                android:endColor="#E0E0E0"
                android:angle="90"/> <!-- Light gradient for disabled state -->
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#A1A1A1" /> <!-- Disabled border -->
        </shape>
    </item>
</selector>
