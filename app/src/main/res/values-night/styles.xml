<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Livable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/own_very_dark_gray</item>
        <item name="colorPrimaryVariant">@color/own_very_dark_gray</item>
        <item name="colorOnPrimary">@color/own_very_dark_gray</item>
        <item name="colorSecondary">@color/own_very_dark_gray</item>
        <item name="colorSecondaryVariant">@color/own_light_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/own_strong_cyan</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:windowBackground">@drawable/darkmode</item>
    </style>

    <style name="Theme.Livable.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Livable.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Livable.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
